# Production Environment Configuration
APP_NAME=GitAlong
ENVIRONMENT=production
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false

# API Configuration
ML_BACKEND_URL=https://api.gitalong.dev
API_TIMEOUT_SECONDS=30

# Features
ENABLE_ML_RECOMMENDATIONS=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=true

# GitHub OAuth (Set these in your deployment environment)
# GITHUB_CLIENT_ID=your_production_github_client_id
# GITHUB_CLIENT_SECRET=your_production_github_client_secret
# GITHUB_REDIRECT_URI=https://gitalong.dev/auth/callback

# Analytics
# GOOGLE_ANALYTICS_ID=your_production_analytics_id
# MIXPANEL_TOKEN=your_production_mixpanel_token

# Email Service (Production)
# SENDGRID_API_KEY=your_production_sendgrid_key
# WELCOME_EMAIL_FROM=noreply@gitalong.dev

# Rate Limiting
MAX_API_REQUESTS_PER_MINUTE=100
MAX_LOGIN_ATTEMPTS=5

# Security
ENABLE_APP_CHECK=true
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
